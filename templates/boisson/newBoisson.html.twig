{% extends 'base.html.twig' %}

{% block title %}Boisson{% endblock %}

{% block body %}
    <div class="box">
        {{ form_start(Boisson) }}
        <div class="input">
            {{ form_row(Boisson.nom, {'attr': {'placeholder': "Gaspacho"}}) }}
            {{ form_row(Boisson.ingredients, {'attr': {'placeholder': "tomates, poivron rouge, ail ..."}}) }}
            {{ form_row(Boisson.prix, {'attr': {'placeholder': "10.90"}}) }}
            {{ form_row(Boisson.brochure)}}
        </div>
        <div class="allBtn">
            {{ form_start(Boisson) }}
            {{ form_widget(Boisson) }}
            <button class="btn-valider-modifier">{{ button_label|default('Enregistrer') }}</button>
            {{ form_end(Boisson) }}
            <a class="btn-back" href="{{ path('app_menu') }}">back</a>
        </div>
    </div>
{% endblock %}