{% block body %}
    <div class="box">

        {{ form_start(Entree) }}
        <div class="input">
            {{ form_row(Entree.nom, {'attr': {'placeholder': "Gaspacho"}}) }}
            {{ form_row(Entree.ingredients, {'attr': {'placeholder': "tomates, poivron rouge, ail ..."}}) }}
