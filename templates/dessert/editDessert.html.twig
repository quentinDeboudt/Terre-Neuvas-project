{% extends 'base.html.twig' %}

{% block title %}Modifier-Dessert{% endblock %}

{% block body %}
    <div class="Table_menu">

        {{ form_start(Dessert) }}
        <div class="entry-title" style="color: #0d5470">
            <h1>Modifier un Dessert</h1>
        </div>

        <div >
            <div class="image-menu">
                {%if brochure%}
                    <img src="{{ asset('uploads/brochures/' ~ brochure)}}" alt="Image">
                {%else%}
                    <img src="{{ asset('img/default-image.png')}}" alt="Image" >
                {%endif%}
            </div>
            <div >
                {{ form_row(Dessert.nom, {'attr': {'placeholder': "Nom du dessert"}}) }}
            </div>
            <div >
                {{ form_row(Dessert.ingredients) }}
            </div>
            <div >
                {{ form_row(Dessert.prix) }}
            </div>

        </div>

        <div>
            <div>
                {{ form_start(Dessert) }}
                {{ form_widget(Dessert) }}
                <button class="btn">{{ button_label|default('Modifier') }}</button>
                {{ form_end(Dessert) }}
            </div>
            <div>
                <a href="{{ path('app_menu') }}">back</a>
            </div>
        </div>


        <div class="">
            <form method="post" action="{{ path('Dessert_delete', {'id': dessert.id} ) }}"
                  onsubmit="return confirm('Êtes-vous sûr de bien vouloir supprimer ce Dessert?');">

                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ dessert.id) }}">
                <button class="btn">Supprimer</button>

            </form>
        </div>
    </div>
{% endblock %}