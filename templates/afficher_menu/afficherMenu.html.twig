{% extends 'base.html.twig' %}

{% block title %}menu{% endblock %}

{% block body %}


    {############################ Entree ###############################}
    <div >
        <h2 id="title-entree">Entree:</h2>
    </div>

    <div class="box-Parents">
        {% for Entree in LstEntrees %}
            <section class="lstMenu">
                <div class="info">
                    <div class="sectionNom">{{ Entree.nom }}</div>
                    <div class="sectionIngredients">{{ Entree.ingredients }}</div>
                    <div class="sectionPrix">{{ Entree.prix }}</div>
                </div>
                <div class="image">
                    {%if Entree.brochureFilename%}
                        <img src="{{ asset('uploads/brochures/' ~ Entree.brochureFilename())}}" alt="Image" class="sectionimg">
                    {%else%}
                        <img src="{{ asset('img/default-image.png')}}" alt=""  class="sectionimg">
                    {%endif%}
                </div>
            </section>
        {% endfor %}
    </div>


    {############################ Plat ###############################}
    <div >
        <h2 id="title-entree">Plat:</h2>
    </div>
    {% for Plat in LstPLats %}
        <section class="lstMenu">
            <div class="sectionNom">{{ Plat.nom }}</div>
            <div class="sectionIngredients">{{ Plat.ingredients }}</div>
            <div class="sectionPrix">{{ Plat.prix }}</div>
        </section>
    {% endfor %}

    {############################ Dessert ###############################}
    <div >
        <h2 id="title-entree">Dessert:</h2>
    </div>
    {% for Dessert in LstDessert %}
        <section class="lstMenu">
            <div class="sectionNom">{{ Dessert.nom }}</div>
            <div class="sectionIngredients">{{ Dessert.ingredients }}</div>
            <div class="sectionPrix">{{ Dessert.prix }}</div>
        </section>
    {% endfor %}


    {############################ Boisson ###############################}
    <div >
        <h2 id="title-entree">Boisson:</h2>
    </div>
    {% for Boisson in LstBoisson %}
        <section class="lstMenu">
            <div class="sectionNom">{{ Boisson.nom }}</div>
            <div class="sectionIngredients">{{ Boisson.ingredients }}</div>
            <div class="sectionPrix">{{ Boisson.prix }}</div>
        </section>
    {% endfor %}

{% endblock %}
